# WhatsApp CRM - Environment Variables Template
# Copy this to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5432/crm_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crm_dev
DATABASE_USER=crm_user
DATABASE_PASSWORD=crm_password

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================================
# FIREBASE
# ============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ============================================================================
# OPENAI
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# WHATSAPP BUSINESS API
# ============================================================================
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ============================================================================
# GOOGLE CLOUD PLATFORM
# ============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-southeast2
PUBSUB_EMULATOR_HOST=localhost:8085

# ============================================================================
# QDRANT (Vector Database)
# ============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ============================================================================
# SERVICE PORTS
# ============================================================================
TENANT_SERVICE_PORT=3001
BILLING_SERVICE_PORT=3002
KNOWLEDGE_SERVICE_PORT=3003
CONVERSATION_SERVICE_PORT=3004
LLM_ORCHESTRATION_PORT=3005
MESSAGE_SENDER_PORT=3006
ANALYTICS_SERVICE_PORT=3007

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug
JWT_SECRET=your-jwt-secret-key-change-in-production
API_VERSION=v1

# ============================================================================
# CLOUD STORAGE
# ============================================================================
STORAGE_BUCKET=your-storage-bucket-name
STORAGE_REGION=asia-southeast2

# ============================================================================
# BIGQUERY (Analytics)
# ============================================================================
BIGQUERY_DATASET=crm_analytics
BIGQUERY_PROJECT_ID=your-gcp-project-id

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
